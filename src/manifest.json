{
    "manifest_version": 2,
    "name": "Tabby McTabface",
    "version": "1.0.0",
    "description": "Nifty Tab Manager",
    "options_page": "options.html",
    "background": {
        "page": "background.html",
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icon-128.png",
        "default_title": "Tabby McTabface"
    },
    "icons": {
        "128": "icon-128.png"
    },
    "permissions": ["tabs", "activeTab", "storage", "unlimitedStorage", "contextMenus"],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
